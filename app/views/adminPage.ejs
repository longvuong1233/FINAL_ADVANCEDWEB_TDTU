<% include header %> <% include topNav %>

<div id="admin-page" class="container">
  <div class="row">
    <div class="col-md-3" id="create-account">
      <h4 class="title-text">Tạo tài khoản mới cho phòng ban</h4>

      <form method="post" action="/user">
        <div class="form-group">
          <label for="usr">Tên tài khoản khoa:</label>
          <input type="text" class="form-control" id="usr" name="username" />
        </div>
        <div class="form-group">
          <label>Tên khoa:</label>
          <input type="text" class="form-control" name="name" />
        </div>
        <button class="btn btn-danger" type="submit">Tạo</button>
      </form>
    </div>
    <div class="col-md-8 offset-1">
      <h4 class="title-text">Tạo chủ đề bài viết mới</h4>
      <form action="/typeInform" method="post">
        <div class="form-group">
          <label for="usr">Tên chủ đề:</label>
          <input type="text" class="form-control w-50" name="nameType" />
        </div>
        <button class="btn btn-warning" type="submit">Tạo</button>
      </form>

      <div class="my-5">
        <table class="table">
          <thead>
            <tr>
              <th>Tài khoản</th>
              <th>Tên Khoa|Phòng ban</th>
              <th>Chủ đề</th>
            </tr>
          </thead>
          <tbody>
            <%for(let i=0; i<listUser.length; i++) {%>
            <tr>
              <td><%=listUser[i].username%></td>
              <td><%=listUser[i].name%></td>
              <td>
                  
               
                <form action="/user/edit" method="post">
                    <select name="idType" class="custom-select-sm">
                      <option value=""></option>
                        <% for(let j=0; j<listType.length; j++) {%>
                           
                    
                      <option <%if(typeof listUser[i].manageTopic!='undefined'&&String(listUser[i].manageTopic._id)==String(listType[j]._id)){%>selected <%}%>  value="<%=listType[j]._id%>"><%=listType[j].name%></option>
                      <%}%>
                    
                    </select>

                    <input type="hidden" value="<%=listUser[i]._id%>" name="idUser">
                    <button class="btn btn-warning" type="submit">Lưu</button>
                </form>
             
              </td>
            </tr>
            <%}%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<% include footer %>
