<% include header %>

<div class="container-fluid">
  <div class="row">
    <div class="col-12 p-0">
      <div
        id="login-page"
        class="
          jumbotron
          min-vh-100
          text-center
          m-0
          d-flex
          flex-column
          justify-content-center
        "
      >
        <span class="login-text">Đăng Nhập</span>
        <% if (messages.error) { %>
          <span class="text-warning text-center"> <h5><%= messages.error %></h5></span>
          <% } %>
        <div id="login-input">
          <div class="row">
            <div class="col-6" id="login-google">
              <a class="btn btn-danger mt-4" href="/google"
                >Đăng nhập với Google <i class="fab fa-google-plus-g"></i
              ></a>
            </div>
            <div class="col-6">
              <form action="user/signin" method="POST">
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"
                      ><span><i class="fas fa-user-alt"></i></span
                    ></span>
                  </div>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Username"
                    aria-label="Username"
                    name="username"
                    aria-describedby="basic-addon1"
                    required
                  />
                </div>
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"
                      ><span><i class="fab fa-suse"></i></span
                    ></span>
                  </div>
                  <input
                    class="form-control"
                    type="password"
                    name="password"
                    placeholder="Password"
                    required
                 
                    aria-label="Password"
                    aria-describedby="basic-addon1"
                  />
                </div>
                <button class="rounded btn btn-primary btn-lg" type="submit">Đăng nhập</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% include footer %>
